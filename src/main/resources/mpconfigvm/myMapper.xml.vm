<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${entity}">
#set($blank=" ")
#set($doPackage="cn.gov.zcy.vaccine.ip.model")
#if(${baseResultMap})

    <resultMap id="${entity}Map" type="${doPackage}.${entity}">
#foreach($field in ${table.fields})
#if(${field.keyFlag})##生成主键排在第一位
        <id property="${field.propertyName}" column="${field.name}" />
#end
#end
#foreach($field in ${table.fields})
	#if(!${field.keyFlag})##生成普通字段
        <result property="${field.propertyName}" column="${field.name}" />
	#end
#end
    </resultMap>

#end
    <sql id="tb">
      ${blank} ${table.name}
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

#if(${baseColumnList})
    <sql id="cols_exclude_id">
    ${blank}   #foreach($field in ${table.fields})
#if(!${field.keyFlag})
          #if($foreach.hasNext)
${field.name}, #else${field.name}
        #end
#end
#end
    </sql>
#end

    <sql id="criteria">
        #foreach($field in ${table.fields})
        <if test="${field.propertyName} != null"> and ${field.name} = #{${field.propertyName}} </if>
        #end
     </sql>

    <insert id="create" parameterType="${doPackage}.${entity}" keyProperty="id" keyColumn="id"
            useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>(<include refid="cols_exclude_id"/>) VALUES
        (
      ${blank}   #foreach($field in ${table.fields})
#if(!${field.keyFlag})##生成普通字段
#if($foreach.hasNext)
#{${field.propertyName}}, #else#{${field.propertyName}}
#end
#end
#end ${blank}      )
    </insert>

    <select id="count" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT COUNT(*) FROM
        <include refid="tb"/>
        <where>
            <include refid="criteria"></include>
        </where>
    </select>

    <select id="paging" parameterType="java.util.Map" resultMap="${entity}Map">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <where>
            <include refid="criteria"></include>
        </where>
        ORDER BY create_at DESC
        <if test="limit != null">
            LIMIT #{offset}, #{limit}
        </if>
    </select>

    <select id="list" parameterType="java.util.Map" resultMap="${entity}Map">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <where>
            <include refid="criteria"></include>
        </where>
        ORDER BY create_at DESC
    </select>

</mapper>
